<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_action_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/color_Black_95"
    android:orientation="horizontal">

    <Button
        android:id="@+id/common_back_btn"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:background="@mipmap/common_back_icon" />

    <TextView
        android:id="@+id/common_title_text"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="通用标题栏" />

    <Button
        android:id="@+id/common_other_btn"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</LinearLayout>